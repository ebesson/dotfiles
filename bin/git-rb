#!/bin/sh
#

BRANCH=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
if [ $? -ne 0 ]; then
    echo "\033[0;31mNot a git repository\033[0m"
    exit 1;
fi
if [ ${BRANCH} == "HEAD" ]; then
    echo "\033[0;31mNot currently on any branch\033[0m"
    exit 1;
fi

git wip
git rebase -i --autosquash origin/${BRANCH}
git unwip
git heads
